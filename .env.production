# Production Environment Configuration
# DO NOT commit actual secrets to version control
# Use proper secret management in production

# Application Configuration
NODE_ENV=production
SERVER_PORT=3000
LOG_LEVEL=info
MONITORING_ENABLED=true

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/devplugin
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=devplugin
POSTGRES_USER=username
POSTGRES_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Authentication
JWT_SECRET=super-secure-jwt-secret-for-production-change-in-real-use
JWT_EXPIRES_IN=24h

# CORS Configuration
CORS_ORIGINS=https://app.example.com,https://admin.example.com

# Monitoring and Observability
PROMETHEUS_ENABLED=true
METRICS_PATH=/api/v1/metrics

# Security
RATE_LIMITING_ENABLED=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60

# Performance
COMPRESSION_ENABLED=true
CACHING_ENABLED=true

# Feature Flags
FEATURE_SWAGGER=false
FEATURE_CORS=true
FEATURE_SERVER_TIMING=true
FEATURE_LAZY_LOADING=true

# Build and Deployment
APP_VERSION=1.0.0
BUILD_ENV=production
BUILD_TIMESTAMP=2024-01-01T00:00:00Z