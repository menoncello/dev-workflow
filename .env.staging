# Staging Environment Configuration
# For testing and validation before production

# Application Configuration
NODE_ENV=staging
SERVER_PORT=3000
LOG_LEVEL=debug
MONITORING_ENABLED=true

# Database Configuration
DATABASE_URL=postgresql://staging_user:staging_pass@localhost:5432/devplugin_staging
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=devplugin_staging
POSTGRES_USER=staging_user
POSTGRES_PASSWORD=staging_pass

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Authentication
JWT_SECRET=staging-jwt-secret-for-testing
JWT_EXPIRES_IN=24h

# CORS Configuration
CORS_ORIGINS=https://staging.example.com,https://admin-staging.example.com

# Monitoring and Observability
PROMETHEUS_ENABLED=true
METRICS_PATH=/api/v1/metrics

# Security
RATE_LIMITING_ENABLED=true
RATE_LIMIT_MAX=200
RATE_LIMIT_WINDOW=60

# Performance
COMPRESSION_ENABLED=true
CACHING_ENABLED=true

# Feature Flags
FEATURE_SWAGGER=true
FEATURE_CORS=true
FEATURE_SERVER_TIMING=true
FEATURE_LAZY_LOADING=true

# Build and Deployment
APP_VERSION=1.0.0-staging
BUILD_ENV=staging
BUILD_TIMESTAMP=2024-01-01T00:00:00Z